<IfModule mod_rewrite.c>

RewriteEngine On    # Turn on the rewriting engine

RewriteRule    ^Logout/?$    logout.php    [L] 
RewriteRule    ^Login/?$    login.php    [L] 
RewriteRule    ^Home/?$    index.php   [L] 

RewriteRule    ^Controller/Login/?$    api/login.php    [L] 
RewriteRule    ^Controller/COMPANY/?$    api/company.php    [L] 
RewriteRule    ^Controller/AUTHORITY/?$    api/authority.php    [L]  

RewriteRule    ^Controller/SMS/?$    api/sms.php    [L] 


RewriteRule    ^Add_Company/?$    add_company.php   [L] 
RewriteRule    ^Add_Company/([A-Za-z0-9-]+)/?$    add_company.php?edit_id=$1   [L] 
RewriteRule    ^All_Company/?$    manage_company.php   [L]
RewriteRule    ^All_Company/Deact/([A-Za-z0-9-]+)/?$    manage_company.php?deact_id=$1   [L] 
RewriteRule    ^All_Company/Act/([A-Za-z0-9-]+)/?$    manage_company.php?act_id=$1   [L] 

RewriteRule    ^Authority/?$    company_authority.php   [L] 
RewriteRule    ^Authority/Auth/([A-Za-z0-9-]+)/?$    company_authority.php?cmp_id=$1   [L] 

# Handle product requests

RewriteRule    ^admin/login/?$    admin/login.php    [NC,L]    # Handle product requests

#RewriteCond     %{SERVER_PORT} ^80$
#RewriteRule     ^(.*)$ https://%{SERVER_NAME}%{REQUEST_URI} [L,R]

#Redirect to www...
#RewriteCond %{HTTP_HOST} !^www\. [NC]
#RewriteRule ^(.*)$ http://www.%{HTTP_HOST}/$1 [R=301,L]

##### Remove .php extension 
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule !.*\.php$ %{REQUEST_FILENAME}.php [QSA,L]
###### End Removing .php

#if requested filename is not a existing file
RewriteCond %{REQUEST_FILENAME} !-f
#if requested filename is not a existing directory
RewriteCond %{REQUEST_FILENAME} !-d 
#Rewrite the url
RewriteRule ^([^/]+)/?$ http://www.microelectra.in/contact/ [R,L]


</IfModule>